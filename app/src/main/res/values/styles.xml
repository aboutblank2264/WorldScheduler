<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <item name = "colorPrimary">@color/primaryColor</item>
        <item name = "colorPrimaryDark">@color/primaryDarkColor</item>
        <item name = "colorAccent">@color/primaryAccentColor</item>
        <item name = "android:divider">@color/secondaryAccentColor</item>
        <item name = "android:textColorPrimary">@color/primaryTextColor</item>
        <item name = "android:textColorSecondary">@color/secondaryTextColor</item>
        <item name = "android:textColorPrimaryInverse">@color/inverseTextColor</item>
        <item name = "android:dropDownListViewStyle">@style/AppTheme.DropDown</item>
    </style>

    <style name = "AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

    <style name = "AppTheme.Toolbar" parent = "ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name = "android:minHeight">?android:attr/actionBarSize</item>
        <item name = "titleTextColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name = "AppTheme.PopupMenu" parent = "Widget.AppCompat.PopupMenu">
        <item name = "iconTint">?android:attr/colorPrimary</item>
    </style>

    <style name = "AppTheme.DropDown">
        <item name = "android:textColor">?android:attr/textColorSecondary</item>
        <item name = "android:dividerHeight">1dp</item>
    </style>

    <style name = "AppTheme.TextAppearance">
        <item name = "android:textColor">?android:attr/textColorPrimary</item>
        <item name = "android:textSize">@dimen/header_text_size</item>
    </style>

    <style name = "AppTheme.TextAppearance.Main">
        <item name = "android:textColor">?android:attr/textColorPrimary</item>
        <item name = "android:singleLine">true</item>
        <item name = "android:ellipsize">start</item>
    </style>

    <style name = "AppTheme.TextAppearance.SubText">
        <item name = "android:textSize">@dimen/sub_text_size</item>
    </style>

    <style name = "AppTheme.TextAppearance.EditTextBar">
        <item name = "android:textColorHint">?android:attr/divider</item>
        <item name = "android:textSize">@dimen/sub_text_size</item>
    </style>

    <style name = "AppTheme.TextAppearance.DropDown">
        <item name = "android:textSize">@dimen/drop_down_text_size</item>
    </style>

    <style name = "AppTheme.IconAppearance">
        <item name = "android:backgroundTint">?android:attr/colorPrimary</item>
    </style>
</resources>
