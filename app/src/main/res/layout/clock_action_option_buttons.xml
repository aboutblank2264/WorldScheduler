<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    >

    <Button
        android:id = "@+id/option_schedule_new"
        android:layout_width = "36dp"
        android:layout_height = "36dp"
        android:background = "@drawable/ic_schedule"
        android:padding = "8dp"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toLeftOf="@id/option_delete"
        app:layout_constraintTop_toTopOf = "parent"
        style="@style/AppTheme.IconAppearance"
        />

    <Button
        android:id = "@+id/option_delete"
        android:layout_width = "36dp"
        android:layout_height = "36dp"
        android:background = "@drawable/ic_delete"
        android:padding = "8dp"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintLeft_toRightOf = "@id/option_schedule_new"
        app:layout_constraintTop_toTopOf = "parent"
        style="@style/AppTheme.IconAppearance"
        />
</merge>