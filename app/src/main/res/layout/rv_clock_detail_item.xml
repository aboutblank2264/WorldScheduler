<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id = "@+id/detail_layout"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    >

    <TextView
        android:id = "@+id/detail_local_clock"
        style = "@style/AppTheme.TextAppearance.SubText"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:paddingStart = "16dp"
        android:paddingTop = "4dp"
        android:paddingEnd = "8dp"
        app:layout_constraintLeft_toLeftOf = "parent"
        />

    <TextView
        android:id = "@+id/detail_other_clock"
        style = "@style/AppTheme.TextAppearance.SubText"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:paddingStart = "8dp"
        android:paddingTop = "4dp"
        android:paddingEnd = "16dp"
        app:layout_constraintRight_toLeftOf = "@id/detail_options"
        />

    <Button
        android:id = "@+id/detail_options"
        style = "@style/AppTheme.IconAppearance"
        android:layout_width = "24dp"
        android:layout_height = "24dp"
        android:background = "@drawable/ic_side_menu"
        android:paddingStart = "4dp"
        android:paddingEnd = "4dp"
        android:paddingTop="4dp"
        app:layout_constraintBaseline_toBaselineOf = "@id/detail_other_clock"
        app:layout_constraintBottom_toBottomOf = "@id/detail_local_clock"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "@id/detail_local_clock"
        />

</android.support.constraint.ConstraintLayout>