<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:focusable = "true"
    >

    <AutoCompleteTextView
        android:id = "@+id/pick_auto_text"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:focusable = "true"
        android:focusableInTouchMode = "true"
        android:hint = "@string/picker_hint"
        android:inputType = "textNoSuggestions"
        android:padding = "8dp"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toLeftOf = "@id/pick_clear_text"
        app:layout_constraintTop_toTopOf = "parent"
        style="@style/AppTheme.TextAppearance.EditTextBar"
        >
        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id = "@+id/pick_clear_text"
        android:layout_width = "36dp"
        android:layout_height = "36dp"
        android:background = "@drawable/ic_clear"
        android:backgroundTint="@color/primaryDarkColor"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintBottom_toBottomOf="@id/pick_auto_text"
        app:layout_constraintTop_toTopOf = "@id/pick_auto_text"
        />

</android.support.constraint.ConstraintLayout>